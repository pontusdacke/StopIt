{
    "manifest_version": 3,
    "name": "StopIt",
    "description": "A plugin to stop you from accessing reddit",
    "version": "1",
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "page_actions": {
        "default_icon": {
            "16": "/images/icon16.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "declarative_net_request": {
        "rule_resources": [
          {
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
          }
        ]
      },
      "permissions": [
        "declarativeNetRequest"
      ]
}